<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:background="?attr/selectableItemBackground"
              android:orientation="horizontal">

    <com.edwin.android.chat_in.views.RoundedImageView
        android:id="@+id/image_view_profile"
        android:layout_width="@dimen/image_view_profile_width"
        android:layout_height="@dimen/image_view_profile_height"
        android:layout_gravity="center"
        tools:background="@drawable/ic_women_image"/>

    <LinearLayout
        android:id="@+id/linear_chat_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/linear_chat_detail_margin_left"
        android:layout_marginStart="@dimen/linear_chat_detail_margin_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_contact_name"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                tools:text="Juan Pablo"
                />

            <TextView
                android:id="@+id/text_view_contact_message_date"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:textAlignment="textEnd"
                tools:text="2:20PM"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_contact_message"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_contact_message_margin_bottom"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="@dimen/text_view_contact_message_padding_right"
            app:paddingEnd="@dimen/text_view_contact_message_padding_right"
            tools:text="Hola, Como estas?Hola, Como estas?Hola, Como estas?Hola, Como estas?Hola, Como estas?"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

    </LinearLayout>

</LinearLayout>